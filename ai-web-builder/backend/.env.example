# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_web_builder
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# AI Services
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
DEEPSEEK_API_KEY=your-deepseek-api-key-here
GEMINI_API_KEY=your-google-gemini-api-key-here

# AI Cost Management
OPENAI_COST_LIMIT_DAILY=100.00
ANTHROPIC_COST_LIMIT_DAILY=100.00
AI_USAGE_ALERT_THRESHOLD=80.00

# Platform Integrations
GOHIGHLEVEL_CLIENT_ID=your-ghl-client-id
GOHIGHLEVEL_CLIENT_SECRET=your-ghl-client-secret
GOHIGHLEVEL_REDIRECT_URI=http://localhost:8000/api/integrations/ghl/callback

SIMVOLY_API_KEY=your-simvoly-api-key
SIMVOLY_API_SECRET=your-simvoly-api-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourapp.com

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=ai-web-builder-assets

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn-here
DATADOG_API_KEY=your-datadog-api-key

# Development
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# Feature Flags
ENABLE_PLATFORM_INTEGRATIONS=True
ENABLE_AI_COST_TRACKING=True
ENABLE_MIGRATION_TOOLS=True
ENABLE_BETA_FEATURES=False